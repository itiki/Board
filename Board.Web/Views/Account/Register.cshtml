@model Board.Web.ViewModels.RegisterModel
@{Layout = "~/Views/Shared/_LayoutPub.cshtml";}
@{ViewBag.Title = "东方财富 - 布告栏 - 注册";}

<h1><a href="/" title="东方财富">东方财富 - 布告栏</a></h1>
<h2>创建新帐户</h2>

<script type="text/javascript">
	seajs.use(["init", "plus-jq/vali/dayrange", function (init, dayrange) {
		var $ = init.jq;
		dayrange($);
	});
</script>

@Html.ValidationSummary(true, "帐户创建不成功，请更正以下错误：", new { @class = "notifi error" })
@{Html.BeginForm("Register", "Account", FormMethod.Post);}
	<p>
		@Html.LabelFor(m => m.UserName)
		@Html.TextBoxFor(m => m.UserName, new { @class = "input submit" })
		@Html.ValidationMessageFor(m => m.UserName)
	</p>
	<p>
		@Html.LabelFor(m => m.Password)
		@Html.PasswordFor(m => m.Password, new { @class = "input submit" })
		@Html.ValidationMessageFor(m => m.Password)
	</p>
	<p>
		@Html.LabelFor(m => m.ConfirmPassword)
		@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input submit" })
		@Html.ValidationMessageFor(m => m.ConfirmPassword)
	</p>
	<p class="clear">
		<a class="submit abtn afol FR">注册</a>
	</p>
@{Html.EndForm();}
