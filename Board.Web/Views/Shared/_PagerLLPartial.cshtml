    string urlstr = "/" + ViewContext.RouteData.Values["controller"] + "/"
        + ViewContext.RouteData.Values["id"] + "/" 
        + ViewContext.RouteData.Values["action"] + "/";
    string pindex = pindex = ViewContext.RouteData.Values["pageindex"].ToString();
}
<div class="pager" index="@pindex" count="@Model.Count" size="10" url="@urlstr"></div>